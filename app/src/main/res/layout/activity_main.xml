<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apprenti.myapplication.MainActivity">

        <TextView
            android:id="@+id/textViewCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:elevation="6dp"
            android:text="Nom Ville"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.504" />

        <TextView
            android:id="@+id/textViewToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aujourd'hui"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="148dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageViewCurrentWeather"
            android:layout_width="79dp"
            android:layout_height="70dp"
            android:layout_marginRight="183dp"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCityName" />

        <TextView
            android:id="@+id/textViewTomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tomorrow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="272dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageViewTomorrowWeather"
            android:layout_width="83dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:layout_marginTop="146dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCityName"
            android:layout_marginRight="179dp"
            app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
